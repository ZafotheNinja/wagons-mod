package shultzy88.wagons.entity;

import com.sun.xml.internal.fastinfoset.sax.Properties;

import net.minecraft.entity.Entity;
import net.minecraft.entity.passive.EntityAnimal;
import net.minecraft.nbt.NBTTagCompound;
import net.minecraft.world.World;
import net.minecraftforge.common.IExtendedEntityProperties;

public class ExtendedEntityPropertiesUtility implements IExtendedEntityProperties
{
	public static String EXT_PROP_NAME = "ExtendedUtilityAnimal";

	// addresses the horse
	protected EntityHorse entity;
	protected String entityName;

	// ensures that horse stays with wagon
	protected boolean isOnWagon;
	protected World world;

	@Override
	public void saveNBTData(NBTTagCompound compound)
	{
		NBTTagCompound properties = new NBTTagCompound();
		compound.setTag(EXT_PROP_NAME, properties);
		properties.setBoolean("isOnWagon", false);
		properties.setDouble("boundedPosX", entity.posX);
		properties.setDouble("boundedPosY", entity.posY);
		properties.setDouble("boundedPosZ", entity.posZ);
	}

	@Override
	public void loadNBTData(NBTTagCompound compound)
	{
		NBTTagCompound properties = (NBTTagCompound) compound
				.getTag("ExtendedUtilityAnimal");
		this.isOnWagon = properties.getBoolean("isOnWagon");
		this.entity.posX = properties.getDouble("boundedPosX");
		this.entity.posY = properties.getDouble("boundedPosY");
		this.entity.posZ = properties.getDouble("boundedPosZ");

		// DEBUG:
		System.out.println("[Steve's Wagons] Entity data loaded from NBT: "
				+ this.entityName);
	}

	@Override
	public void init(Entity entity, World world)
	{
		this.entity = (EntityAnimal) entity;
		this.world = world;

	}

}
