package shultzy88.wagons.entity;

import net.minecraft.entity.Entity;
import net.minecraft.entity.passive.EntityHorse;
import net.minecraft.nbt.NBTTagCompound;
import net.minecraft.world.World;
import net.minecraftforge.common.IExtendedEntityProperties;

public class ExtendedPropertiesHorse implements IExtendedEntityProperties
{
	public static String EXT_PROP_NAME = "ExtendedHorse";
	// addresses the horse
	protected EntityHorse entityHorse;
	
	// ensures that horse stays with wagon
	protected boolean isHorseBinded;
	protected World world;
	
	@Override
	public void saveNBTData(NBTTagCompound compound)
	{
		NBTTagCompound properties = new NBTTagCompound();
		compound.setTag(EXT_PROP_NAME, properties);
		properties.setBoolean("isHorseBinded", false);
		properties.setInteger("boundedPosX", entityHorse.serverPosX);
		properties.setInteger("boundedPosY", entityHorse.serverPosY);
		properties.setInteger("boundedPosZ", entityHorse.serverPosZ);
	}

	@Override
	public void loadNBTData(NBTTagCompound compound)
	{
		NBTTagCompound properties = (NBTTagCompound) compound.getTag("ExtendedHorse");
	}

	@Override
	public void init(Entity entity, World world)
	{
		this.entityHorse = (EntityHorse)entity;
		this.world = world;
	}

}
